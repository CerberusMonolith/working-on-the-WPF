<Window x:Class="Работа_на_платформе_WPF.Task1Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Работа_на_платформе_WPF"
        mc:Ignorable="d"
        Title="Task1Window" Height="250" Width="300">
    <Grid>
        <Label Content="Введите слово (На русском):" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtWord" HorizontalAlignment="Left" Height="23" Margin="10,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Background="White" BorderBrush="Red"/>
        <Button Content="Перевести" Click="TranslateWord" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Width="75" Background="Red"/>
        <Label x:Name="lblTranslation" Content="" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
