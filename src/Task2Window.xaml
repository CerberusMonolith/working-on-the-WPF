<Window x:Class="Работа_на_платформе_WPF.Task2Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Работа_на_платформе_WPF"
        mc:Ignorable="d"
        Title="Task2Window" Height="250" Width="300">
    <Grid>
        <Label Content="Знак арифметической операции (+, -, *, /):" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtOperation" HorizontalAlignment="Left" Height="23" Margin="10,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" BorderBrush="#FF0040FF"/>
        <Button Content="Вычислить" Click="Calculate" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Width="75" Background="DeepSkyBlue"/>
        <Label x:Name="lblResult" Content="" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top"/> 
    </Grid>
</Window>
