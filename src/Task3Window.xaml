<Window x:Class="Работа_на_платформе_WPF.Task3Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Работа_на_платформе_WPF"
        mc:Ignorable="d"
        Title="Task3Window" Height="300" Width="300">
    <Grid>
        <Label Content="Введите число (0-100):" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtNumber" HorizontalAlignment="Left" Height="23" Margin="10,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" BorderBrush="#FF00FF10"/>
        <Button Content="Проверить" Click="CheckNumber" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Width="75" Background="#FF4EFF00"/>
        <Label x:Name="lblResult" Content="" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
