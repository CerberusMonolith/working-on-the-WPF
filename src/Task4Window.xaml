<Window x:Class="Работа_на_платформе_WPF.Task4Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Работа_на_платформе_WPF"
        mc:Ignorable="d"
        Title="Task4Window" Height="300" Width="300">
    <Grid>
        <Label Content="Введите пароль:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Height="23" Margin="10,40,0,0" VerticalAlignment="Top" Width="120" BorderBrush="#FF5A00FF"/>
        <Button Content="Проверить" Click="CheckPassword" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Width="75" Background="#FF9400FF"/>
        <Label x:Name="lblResult" Content="" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
